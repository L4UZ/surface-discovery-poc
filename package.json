{
  "name": "surface-discovery",
  "version": "0.1.0",
  "description": "In-depth web attack surface discovery service for AI-powered pentesting",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "surface-discovery": "./dist/cli.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "security",
    "pentesting",
    "reconnaissance",
    "attack-surface",
    "subdomain-enumeration",
    "web-security"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "date-fns": "^3.0.6",
    "ora": "^7.0.1",
    "p-limit": "^5.0.0",
    "playwright": "^1.40.0",
    "tldts": "^6.1.1",
    "which": "^4.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/ui": "^4.0.8",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typedoc": "^0.25.6",
    "typescript": "^5.3.3",
    "vitest": "^4.0.8"
  }
}
